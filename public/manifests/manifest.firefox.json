{
  "manifest_version": 3,
  "name": "HiNote",
  "version": "1.0.0",
  "description": "Local-first knowledge management.",
  "permissions": [
    "contextMenus",
    "sidePanel",
    "activeTab",
    "scripting",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": ["<all_urls>"],
  "sidebar_action": {
    "default_panel": "index.html",
    "default_title": "HiNote",
    "default_icon": {
      "32": "store_assets/HiNote-icon-32.png",
      "48": "store_assets/Hinote-icon-48.png"
    }
  },
  "action": {
    "default_title": "HiNote",
    "default_icon": {
      "48": "store_assets/HiNote-icon-48.png",
      "32": "store_assets/HiNote-icon-32.png",
      "128": "store_assets/HiNote-icon-128.png"
    }
  },
  "icons": {
    "16": "store_assets/HiNote-icon-16.png",
    "32": "store_assets/HiNote-icon-32.png",
    "48": "store_assets/HiNote-icon-48.png",
    "128": "store_assets/HiNote-icon-128.png"
  },
  "background": {
    "scripts": ["src/entry/background/index.ts"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/entry/content/index.tsx"]
    }
  ]
}
