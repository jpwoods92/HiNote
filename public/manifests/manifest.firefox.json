{
  "manifest_version": 3,
  "name": "Highlight & Note",
  "version": "1.0.0",
  "description": "Local-first knowledge management.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "sidebar_action": {
    "default_panel": "sidepanel.html",
    "default_title": "Highlight & Note",
    "open_at_install": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "highlight-note@example.com",
      "strict_min_version": "109.0"
    }
  }
}
