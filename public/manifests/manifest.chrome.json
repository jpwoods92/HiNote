{
  "manifest_version": 3,
  "name": "HiNote",
  "version": "1.0.1",
  "description": "HiNote is your private, local-first tool for thought.",
  "permissions": [
    "contextMenus",
    "sidePanel",
    "activeTab",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": ["<all_urls>"],
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Open Side Panel",
    "default_icon": {
      "16": "store_assets/HiNoteIcon-16.png",
      "32": "store_assets/HiNoteIcon-32.png",
      "48": "store_assets/HiNoteIcon-48.png",
      "128": "store_assets/HiNoteIcon-128.png"
    }
  },
  "icons": {
    "16": "store_assets/HiNoteIcon-16.png",
    "32": "store_assets/HiNoteIcon-32.png",
    "48": "store_assets/HiNoteIcon-48.png",
    "128": "store_assets/HiNoteIcon-128.png"
  },
  "background": {
    "service_worker": "src/entry/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/entry/content/index.tsx"]
    }
  ]
}
