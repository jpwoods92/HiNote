{
  "manifest_version": 3,
  "name": "Highlight & Note",
  "version": "1.0.0",
  "description": "Local-first knowledge management.",
  "permissions": [
    "contextMenus",
    "sidePanel",
    "activeTab",
    "scripting",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": ["<all_urls>"],
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Open Side Panel"
  },
  "background": {
    "service_worker": "src/entry/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/entry/content/index.tsx"]
    }
  ]
}
